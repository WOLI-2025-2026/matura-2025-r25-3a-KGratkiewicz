{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ kompiluj aktywny plik",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Zadanie wygenerowane przez debuger."
        },
        {
            "type": "cmake",
            "label": "CMake: kompiluj",
            "command": "build",
            "targets": [
                "[N/D — Wybierz zestaw]"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Zadanie kompiluj szablonu narzędzia CMake"
        }
    ],
    "version": "2.0.0"
}